#!/bin/zsh

__splitline__ -t "brew update"
brew update || exit
__splitline__ -t "brew upgrade"
brew upgrade
__splitline__ -t 'brew upgrade $(brew list --cask) --cask'
brew upgrade $(brew list --cask) --cask
__splitline__ -t "clean brew cache"
cl $(brew --cache)

__splitline__ -t "conda update"
__splitline__ -t "base"
conda update -n base --all -y
environ=$(conda env list | grep py3 | awk '{print $1}')
__splitline__ -t "$environ"
conda update -n $environ --all -y
__splitline__ -t "conda clean"
conda clean -a -y
